<div class="panel">
  <h2><%= @question.body %></h2>
</div>

<h3>What did you decide?</h3>
<div class="row">
  <% @choices.each_with_index do |choice, index| %>
    <div class="columns medium-4 small-12 end">
      <a href="#"><div class="panel text-center choice-panel" id="<%=choice.id%>">
        <%= choice.description %>
      </div></a>
    </div>
  <% end %>
</div>

<h3>What was the outcome?</h3>
<label id="review_product_fit">
  Your Rating:
  <span id="sliderOutput"></span>
</label>
<div class="row">
  <div class="small-12 small-centered columns">
    <h6>
      <span class="left">runs small</span>
      <span class="right">runs large</span>
      <center>true to size</center>
    </h6>
  </div>
</div>
<div class="row">
  <div class="small-12 small-centered columns">
    <div class="range-slider" data-slider data-options="start: 0; end: 10; display_selector: #sliderOutput">
      <span class="range-slider-handle" role="slider" tabindex="0"></span>
      <span class="range-slider-active-segment"></span>
      <input type="hidden" name="review[product_fit]" id="review_product_fit">
    </div>
  </div>
</div>



<%= link_to("Create Response", "#", class: "button expand submit-response", data: { question_id: @question.id }) %>
